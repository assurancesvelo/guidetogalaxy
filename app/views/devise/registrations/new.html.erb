
<div id="large-header" class="large-header" style="background-image:url('<%= image_path "image_header.jpg" %>')">
  <canvas id="demo-canvas"></canvas>
  <div class="devise-form-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 mx-auto devise-form">

            <h1>Inscription</h1>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class:" form-control input-form" %>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class:" form-control input-form" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class:" form-control input-form" %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "S'inscrire", class:"btn btn-cours btn-purple" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
  </div>
</div>
